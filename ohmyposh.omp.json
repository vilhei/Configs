{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#2bbd26",
          "foreground": "#0C212F",
          "properties": {
            "folder_icon": "...",
            "folder_separator_icon": "<transparent> \ue0b1 </>",
            "home_icon": "\ueb06",
            "style": "agnoster_short"
          },
          "style": "diamond",
          "template": " {{ .Path }} ",
          "trailing_diamond": "\ue0b0",
          "type": "path"
        },{
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#100e23",
          "background": "#906cff",
          "template": " Óàµ {{ .Full }} "
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "filler": ".",
      "segments": [
        {
          "background": "#280C2E",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#7621DE{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#7621DE{{ end }}",
            "{{ if gt .Ahead 0 }}#7621DE{{ end }}",
            "{{ if gt .Behind 0 }}#7621DE{{ end }}"
          ],
          "foreground": "#FFFFFF",
          "leading_diamond": "\ue0b2",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "rprompt"
    }
  ],
  "transient_prompt": {
    "foreground": "#2bbd26",
    "style": "diamond",
    "trailing_diamond": "\ue0b0",
    "type": "time",
    "template": "{{ now | date \"15:04:05\" }} --> "
  },
  "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.Folder | replace \"~\" \"üè†\"}} @ {{.HostName}}",
  "final_space": true,
  "version": 2
}
